@model TMS_Project.Models.TraineeProfile
@{
	ViewBag.Title = "Edit";
}

<h2>Edit Trainee Profile</h2>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })
@using (Html.BeginForm("Edit", "TraineeProfiles", FormMethod.Post))
{
	@Html.AntiForgeryToken()
	@Html.HiddenFor(p => p.Id)

	<div class="form-group">
		@Html.LabelFor(tp => tp.Full_Name)
		@Html.EditorFor(tp => tp.Full_Name, new { htmlAttributes = new { @class = "form-control" } })
		@Html.ValidationMessageFor(tp => tp.Full_Name, "", new { @class = "text-danger" })
	</div>

	<div class="form-group">
		@Html.LabelFor(tp => tp.Education)
		@Html.EditorFor(tp => tp.Education, new { htmlAttributes = new { @class = "form-control" } })
		@Html.ValidationMessageFor(tp => tp.Education, "", new { @class = "text-danger" })
	</div>

	<div class="form-group">
		@Html.LabelFor(tp => tp.Programming_Language)
		@Html.EditorFor(tp => tp.Programming_Language, new { htmlAttributes = new { @class = "form-control" } })
		@Html.ValidationMessageFor(tp => tp.Programming_Language, "", new { @class = "text-danger" })
	</div>

	<div class="form-group">
		@Html.LabelFor(tp => tp.Experience_Details)
		@Html.EditorFor(tp => tp.Experience_Details, new { htmlAttributes = new { @class = "form-control" } })
		@Html.ValidationMessageFor(tp => tp.Experience_Details, "", new { @class = "text-danger" })
	</div>

	<div class="form-group">
		@Html.LabelFor(tp => tp.Location)
		@Html.EditorFor(tp => tp.Location, new { htmlAttributes = new { @class = "form-control" } })
		@Html.ValidationMessageFor(tp => tp.Location, "", new { @class = "text-danger" })
	</div>

	<button type="submit" class="btn btn-primary">Edit</button>

	<div class="invisible">
		@Html.LabelFor(p => p.TraineeId)
		@Html.EditorFor(p => p.TraineeId, new { htmlAttributes = new { @class = "form-control" } })
		@Html.ValidationMessageFor(p => p.TraineeId, "", new { @class = "text-danger" })
	</div>
}

