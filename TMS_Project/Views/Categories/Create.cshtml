@model TMS_Project.Models.Category
@{
	ViewBag.Title = "Create";
}

<h2>Create a new Category</h2>

@using (Html.BeginForm("Create", "Categories", FormMethod.Post))
{
	@Html.HiddenFor(c => c.Id)
	<div class="form-group">
		@Html.LabelFor(c => c.Name)
		@Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
		@Html.ValidationMessageFor(c => c.Name, "", new { @class = "text-danger" })
	</div>

	<div class="form-group">
		@Html.LabelFor(c => c.Descriptions)
		@Html.TextBoxFor(c => c.Descriptions, new { @class = "form-control" })
		@Html.ValidationMessageFor(c => c.Descriptions, "", new { @class = "text-danger" })
	</div>
	<button type="submit" class="btn btn-primary">Create</button>
}
