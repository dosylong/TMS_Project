@model TMS_Project.ViewModels.TraineeToCourseViewModel
@{
	ViewBag.Title = "Create";
}

<h2>Assign Trainee to Course</h2>

@using (Html.BeginForm("Create", "TraineeToCourses", FormMethod.Post))
{
	<div class="form-group">
		@Html.LabelFor(tr => tr.TraineeToCourse.TraineeId)
		@Html.DropDownListFor(tr => tr.TraineeToCourse.TraineeId
		  , new SelectList(Model.Trainees, "Id", "Email"),
		  "Select Trainee",
		  new { @class = "form-control" }
		)
	</div>

	<div class="form-group">
		@Html.LabelFor(tr => tr.TraineeToCourse.Course.Name)
		@Html.DropDownListFor(tr => tr.TraineeToCourse.CourseId
		  , new SelectList(Model.Courses, "Id", "Name"),
		  "Select Course",
		  new { @class = "form-control" }
		)

	</div>

	<button type="submit" class="btn btn-primary">Assign</button>
}