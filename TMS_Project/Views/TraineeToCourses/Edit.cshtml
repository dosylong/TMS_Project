@model TMS_Project.ViewModels.TraineeToCourseViewModel
@{
	ViewBag.Title = "Edit";
}

<h2>Edit</h2>
@Html.ValidationSummary(false, "", new { @class = "text-danger" })

@using (Html.BeginForm("Edit", "TraineeToCourses", FormMethod.Post))
{
	<div class="form-group">
		@Html.LabelFor(tr => tr.TraineeToCourse.Course.Name)
		@Html.DropDownListFor(tr => tr.TraineeToCourse.CourseId
		   , new SelectList(Model.Courses, "Id", "Name"),
		   "Select Course",
		   new { @class = "form-control" })
	</div>
	<button type="submit" class="btn btn-primary">Edit</button>
}