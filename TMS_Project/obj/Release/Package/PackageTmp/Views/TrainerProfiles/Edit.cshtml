@model TMS_Project.Models.TrainerProfile
@{
	ViewBag.Title = "Edit";
}

<h2>Edit Trainer Profile</h2>

@using (Html.BeginForm("Edit", "TrainerProfiles", FormMethod.Post))
{
	@Html.AntiForgeryToken()
	@Html.HiddenFor(p => p.Id)

	<div class="form-group">
		@Html.LabelFor(tp => tp.Full_Name)
		@Html.EditorFor(tp => tp.Full_Name, new { htmlAttributes = new { @class = "form-control" } })
		@Html.ValidationMessageFor(tp => tp.Full_Name, "", new { @class = "text-danger" })
	</div>

	<div class="form-group">
		@Html.LabelFor(tp => tp.Education)
		@Html.EditorFor(tp => tp.Education, new { htmlAttributes = new { @class = "form-control" } })
		@Html.ValidationMessageFor(tp => tp.Education, "", new { @class = "text-danger" })
	</div>

	<div class="form-group">
		@Html.LabelFor(tp => tp.External_Internal)
		@Html.EditorFor(tp => tp.External_Internal, new { htmlAttributes = new { @class = "form-control" } })
		@Html.ValidationMessageFor(tp => tp.External_Internal, "", new { @class = "text-danger" })
	</div>

	<div class="form-group">
		@Html.LabelFor(tp => tp.Working_Place)
		@Html.EditorFor(tp => tp.Working_Place, new { htmlAttributes = new { @class = "form-control" } })
		@Html.ValidationMessageFor(tp => tp.Working_Place, "", new { @class = "text-danger" })
	</div>

	<div class="form-group">
		@Html.LabelFor(tp => tp.Phone_Number)
		@Html.EditorFor(tp => tp.Phone_Number, new { htmlAttributes = new { @class = "form-control" } })
		@Html.ValidationMessageFor(tp => tp.Phone_Number, "", new { @class = "text-danger" })
	</div>

	<button type="submit" class="btn btn-primary">Edit</button>

	<div class="invisible">
		@Html.LabelFor(p => p.TrainerId)
		@Html.EditorFor(p => p.TrainerId, new { htmlAttributes = new { @class = "form-control" } })
		@Html.ValidationMessageFor(p => p.TrainerId, "", new { @class = "text-danger" })
	</div>
}

